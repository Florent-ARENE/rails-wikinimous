<div class="container">
  <div class="row justify-content-center">
    <h1>Liste des articles <%= link_to '<i class="fa-solid fa-circle-plus"></i>'.html_safe, new_article_path %></h1>
    <ul>
      <% @articles.each do |article| %>
        <li><%= link_to article.title, article_path(article) %>
         <%= link_to '<i class="fa-solid fa-square-pen"></i>'.html_safe, edit_article_path(article) %>
         <%= link_to '<i class="fa-solid fa-eraser"></i>'.html_safe, article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
